{
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    // Target and Module
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],

    "baseUrl": "./src",
    "paths": {
      "@/models/*": ["models/*"],
      "@/gameModes/*": ["gameModes/*"],
      "@/gameEvents/*": ["gameEvents/*"],
      "@/managers/*": ["managers/*"],
      "@/factories/*": ["factories/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"],
      "@/config/*": ["config/*"],
      "@/routes/*": ["routes/*"],
      "@/middleware/*": ["middleware/*"],
      "@/sockets/*": ["sockets/*"]
    }
  },
  "references": [{ "path": "./tsconfig.app.json" }],
  "include": ["src/tests/**/*.ts"]
}
