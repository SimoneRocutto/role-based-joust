{
  "name": "extended-joust-client",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:https": "USE_HTTPS=true vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "NODE_TLS_REJECT_UNAUTHORIZED=0 playwright test",
    "test:e2e:webkit": "NODE_TLS_REJECT_UNAUTHORIZED=0 playwright test --project=webkit",
    "test:e2e:fast": "NODE_TLS_REJECT_UNAUTHORIZED=0 playwright test --grep-invert 'countdown goes from'",
    "test:e2e:ui": "NODE_TLS_REJECT_UNAUTHORIZED=0 playwright test --ui",
    "test:e2e:debug": "NODE_TLS_REJECT_UNAUTHORIZED=0 playwright test --debug",
    "test:e2e:headed": "NODE_TLS_REJECT_UNAUTHORIZED=0 playwright test --headed"
  },
  "dependencies": {
    "framer-motion": "^10.16.16",
    "howler": "^2.2.4",
    "lucide-react": "^0.300.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "socket.io-client": "^4.6.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/howler": "^2.2.11",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^20.3.9",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^4.0.18"
  }
}
