{
  "name": "extended-joust-server",
  "version": "1.0.0",
  "description": "Multiplayer movement-based game server with role-based gameplay",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "start": "node dist/server.js",
    "test": "ts-node --project tsconfig.test.json -r tsconfig-paths/register src/tests/index.test.ts",
    "test:core": "ts-node --project tsconfig.test.json -r tsconfig-paths/register src/tests/scenarios/core.test.ts",
    "test:roles": "ts-node --project tsconfig.test.json -r tsconfig-paths/register src/tests/scenarios/roles.test.ts",
    "test:effects": "ts-node --project tsconfig.test.json -r tsconfig-paths/register src/tests/scenarios/statusEffects.test.ts",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "game",
    "multiplayer",
    "websocket",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
